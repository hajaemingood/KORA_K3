<!-- file: odometry_launch.launch -->
<launch>
  <!-- ROS1에서는 use_sim_time 전역 파라미터로 별도 설정 -->
  <param name="/use_sim_time" value="false"/>

  <!-- wheel_odom 파라미터 로드 -->
  <rosparam file="$(find kora_k3)/config/wheel_odom.yaml" command="load"/>

  <!--imu filtering -->
  <node pkg="kora_k3" type="imu_pub.py" name="imu_pub" output="screen"/>

  <!-- wheel_odom 노드 실행 -->
  <node pkg="kora_k3" type="wheel_odom_node.py" name="wheel_odom" output="screen"/>

  <!-- EKF 파라미터 로드 -->
  <rosparam file="$(find kora_k3)/config/ekf_wheel_imu.yaml" command="load"/>

  <!-- robot_localization EKF 노드 실행 -->
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_se_odom" output="screen"/>

  <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom_tf" args="2.101464 18.425203 0 0 0 0 1 map odom" /> -->
</launch>

