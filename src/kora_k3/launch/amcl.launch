<launch>
  <node pkg="map_server" type="map_server" name="map_server"
        args="$(find kora_k3)/maps/f7.yaml" />

  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <!-- 프레임/TF -->
    <param name="base_frame_id" value="base_link"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="global_frame_id" value="map"/>
    <param name="tf_broadcast" value="true"/>
    <param name="use_map_topic" value="true"/>
    <remap from="scan" to="/scan"/>

    <!-- 파티클/KLD -->
    <param name="min_particles" value="120"/>
    <param name="max_particles" value="700"/>
    <param name="kld_err" value="0.03"/>
    <param name="kld_z" value="0.99"/>

    <!-- 업데이트/리샘플/TF -->
    <param name="update_min_d" value="0.05"/>
    <param name="update_min_a" value="0.05"/>
    <param name="resample_interval" value="1"/>
    <param name="transform_tolerance" value="0.2"/>

    <!-- 레이저 모델 -->
    <param name="laser_model_type" value="likelihood_field"/>
    <param name="laser_max_range" value="12.0"/>
    <param name="laser_min_range" value="0.08"/>
    <param name="laser_max_beams" value="60"/>
    <param name="laser_z_hit" value="0.8"/>
    <param name="laser_sigma_hit" value="0.20"/>
    <param name="laser_z_rand" value="0.2"/>
    <param name="laser_z_short" value="0.05"/>
    <param name="laser_lambda_short" value="0.1"/>
    <param name="laser_z_max" value="0.05"/>
    <param name="laser_likelihood_max_dist" value="2.0"/>

    <!-- 오도메트리 노이즈 -->
    <param name="odom_model_type" value="diff"/>
    <param name="odom_alpha1" value="0.25"/>
    <param name="odom_alpha2" value="0.25"/>
    <param name="odom_alpha3" value="0.25"/>
    <param name="odom_alpha4" value="0.25"/>

    <!-- 초기 자세(원하면 RViz에서 /initialpose로 덮어쓰기) -->
    <param name="initial_pose_x" value="0.0"/>
    <param name="initial_pose_y" value="0.0"/>
    <param name="initial_pose_a" value="0.0"/>
    <param name="initial_cov_xx" value="0.25"/>
    <param name="initial_cov_yy" value="0.25"/>
    <param name="initial_cov_aa" value="0.0685"/>
  </node>

  <node pkg="rviz" type="rviz" name="rviz"
        args="-d $(find kora_k3)/config/localization.rviz" output="screen"/>
</launch>
