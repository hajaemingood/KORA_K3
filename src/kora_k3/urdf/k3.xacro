<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="k3" >

    <!--MACROS-->
    <xacro:include filename="macros.xacro"/>

    <!-- COLOR-->
    <material name = "white">
        <color rgba = "1 1 1 1"/>
    </material>

    <material name = "blue">
        <color rgba = "0 0 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!--BASE LINK-->
    <link name = "base_link">
    </link>

    <!--BODY LINK-->
    <joint name = "body_joint" type = "fixed">
        <parent link = "base_link"/>
        <child link = "body" />
        <origin xyz = "-0.1514 0 -0.05"/>
    </joint>

    <link name = "body">
        <visual>
            <origin xyz = "0.1 0 0.03"/>
            <geometry>
                <box size = "0.425 0.23 0.15"/>
            </geometry>
            <material name = "white"/>
        </visual>
        <collision>
            <origin xyz = "0.1 0 0.03"/>
            <geometry>
                <box size = "0.425 0.23 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="3.5" x="0.425" y="0.23" z="0.15">
            <origin xyz="0.1 0 0.03" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- 앞바퀴용 조향 링크 두 개 추가 -->
    <link name="front_left_steer_link">
        <visual>
            <geometry>
                <box size="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <box size="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.02" x="0.01" y="0.01" z="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <link name="front_right_steer_link">
        <visual>
            <geometry>
                <box size="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <box size="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.02" x="0.01" y="0.01" z="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- 앞바퀴 조향 조인트: yaw 축, ±20deg = ±0.349066rad -->
    <joint name="front_left_steer_joint" type="revolute">
        <parent link="base_link"/>
        <child  link="front_left_steer_link"/>
        <origin xyz="0.1736 0.115 -0.05" rpy="0 0 0"/>   <!-- 원래 앞바퀴 위치와 같게 -->
        <axis xyz="0 0 1"/>
        <limit lower="-0.349066" upper="0.349066" effort="30" velocity="2.0"/>
    </joint>

    <joint name="front_right_steer_joint" type="revolute">
        <parent link="base_link"/>
        <child  link="front_right_steer_link"/>
        <origin xyz="0.1736 -0.115 -0.05" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.349066" upper="0.349066" effort="30" velocity="2.0"/>
    </joint>

    <!-- FRONT LEFT WHEEL -->
    <xacro:wheel_link name="front_left_wheel" parent_link="front_left_steer_link"
                  xyz="0 0 0" rpy="-${pi/2} 0 0" direction="1"/>

    <gazebo reference = "front_left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- FRONT RIGHT WHEEL -->
    <xacro:wheel_link name="front_right_wheel" parent_link="front_right_steer_link"
                  xyz="0 0 0" rpy="${pi/2} 0 0" direction="-1"/>
    
    <gazebo reference = "front_right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- REAR LEFT WHEEL -->
    <xacro:wheel_link name="rear_left_wheel" parent_link="base_link"
                  xyz="-0.1514 0.115 -0.05" rpy="-${pi/2} 0 0" direction="1"/>

    <gazebo reference = "rear_left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- REAR RIGHT WHEEL -->
    <xacro:wheel_link name="rear_right_wheel" parent_link="base_link"
                  xyz="-0.1514 -0.115 -0.05" rpy="${pi/2} 0 0" direction="-1"/>

    <gazebo reference = "rear_right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- CASTER WHEEL LINK -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="body"/>
        <child link="caster_wheel"/>
        <origin xyz="0.03 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius = "0.03"/>
            </geometry>
            <material name = "black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius = "0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference = "caster_wheel">
        <material>Gazebo/Blue</material>

        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!--LiDAR-->
    <joint name = "laser_joint" type = "fixed">
        <parent link = "base_link"/>
        <child link = "laser"/>
        <origin xyz = "0.0836 0 0.11" rpy="0 0 0"/>
    </joint>

    <link name="laser">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.04"/>
            </geometry>
            <material name = "red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.04"/>
            </geometry>
        </collision>
    </link>

    <!-- CAMERA -->
    <joint name = "camera_joint" type = "fixed">
        <parent link = "base_link"/>
        <child link = "camera_link"/>
        <origin xyz = "0.1286 0 0.06" rpy="0 0 0"/>
    </joint>

    <link name = "camera_link">
        <visual>
            <geometry>
                <box size = "0.025 0.12 0.03"/>
            </geometry>
            <material name = "red"/>
        </visual>
        <collision>
            <geometry>
                <box size = "0.025 0.12 0.03"/>
            </geometry>
        </collision>
    </link>

    <!-- <joint name = "camera_optical_joint" type = "fixed">
        <parent link = "camera_link"/>
        <child link = "camera_link_optical"/>
        <origin xyz = "0 0 0" rpy = "${-pi/2} 0 ${pi/2}"/>
    </joint>

    <link name = "camera_link_optical">
    </link> -->

    <!-- IMU -->
    <joint name = "imu_joint" type = "fixed">
        <parent link = "base_link"/>
        <child link = "imu_link"/>
        <origin xyz = "-0.1014 0 0.02" rpy = "0 0 0"/>
    </joint>

    <link name = "imu_link">
        <visual>
            <geometry>
                <box size = "0.03 0.03 0.01"/>
            </geometry>
            <material name = "blue"/>
        </visual>
        <collision>
            <geometry>
                <box size = "0.03 0.03 0.01"/>
            </geometry>
        </collision>
    </link>
 
</robot>